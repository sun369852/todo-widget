{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "todo-widget",
  "version": "0.1.0",
  "identifier": "com.todowidget.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Todo Widget",
        "label": "main",
        "width": 360,
        "height": 520,
        "minWidth": 320,
        "minHeight": 400,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "shadow": false
      },
      {
        "title": "Todo Bubble",
        "label": "bubble",
        "width": 70,
        "height": 70,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "center": false,
        "x": 1200,
        "y": 500,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:todo.db"]
    }
  }
}
